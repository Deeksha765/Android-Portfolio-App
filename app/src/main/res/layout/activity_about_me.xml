<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/img"
            android:contentDescription="@string/profile_image" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/student_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Title/Role -->
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/student_role"
            android:textSize="16sp"
            android:textColor="@color/gray" />

        <!-- About Me Section -->
        <TextView
            android:id="@+id/tvAboutHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRole"
            android:layout_marginTop="32dp"
            android:text="@string/about_me"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/tvAboutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAboutHeading"
            android:layout_marginTop="12dp"
            android:text="@string/about_description"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black" />

        <!-- Education Section -->
        <TextView
            android:id="@+id/tvEducationHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAboutContent"
            android:layout_marginTop="32dp"
            android:text="@string/education"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <LinearLayout
            android:id="@+id/educationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEducationHeading"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/education_degree"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/education_university"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/education_year"
                android:textSize="14sp"
                android:textColor="@color/gray" />

        </LinearLayout>

        <!-- Interests Section -->
        <TextView
            android:id="@+id/tvInterestsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/educationContainer"
            android:layout_marginTop="32dp"
            android:text="@string/interests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/tvInterestsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInterestsHeading"
            android:layout_marginTop="12dp"
            android:text="@string/interests_description"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInterestsContent"
            android:layout_marginTop="32dp"
            android:text="@string/back_to_dashboard"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>