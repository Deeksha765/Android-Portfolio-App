<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Projects Section -->
        <TextView
            android:id="@+id/tvProjectsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_projects"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <!-- Project 1 -->
        <LinearLayout
            android:id="@+id/project1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProjectsHeading"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_1_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/project_1_desc"
                android:textSize="14sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Project 2 -->
        <LinearLayout
            android:id="@+id/project2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project1"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_2_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/project_2_desc"
                android:textSize="14sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Project 3 -->
        <LinearLayout
            android:id="@+id/project3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project2"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_3_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/project_3_desc"
                android:textSize="14sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Contact Section -->
        <TextView
            android:id="@+id/tvContactHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/project3"
            android:layout_marginTop="32dp"
            android:text="@string/contact_me"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <!-- Contact Details Container -->
        <LinearLayout
            android:id="@+id/contactContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContactHeading"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_email"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:textColor="@color/black" />

            <!-- Phone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_phone"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:textColor="@color/black" />

            <!-- LinkedIn -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_linkedin"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:textColor="@color/black" />

            <!-- GitHub -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_github"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/ic_menu_share"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactContainer"
            android:layout_marginTop="32dp"
            android:text="@string/back_to_dashboard"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>