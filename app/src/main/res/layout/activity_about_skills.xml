<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/img"
            android:contentDescription="@string/profile_image" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/student_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Title/Role -->
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/student_role"
            android:textSize="16sp"
            android:textColor="@color/gray" />

        <!-- About Me Section -->
        <TextView
            android:id="@+id/tvAboutHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRole"
            android:layout_marginTop="32dp"
            android:text="@string/about_me"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/tvAboutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAboutHeading"
            android:layout_marginTop="12dp"
            android:text="@string/about_description"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black" />

        <!-- Skills Section -->
        <TextView
            android:id="@+id/tvSkillsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAboutContent"
            android:layout_marginTop="32dp"
            android:text="@string/technical_skills"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <!-- Skills List -->
        <LinearLayout
            android:id="@+id/skillsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSkillsHeading"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skill_1"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skill_2"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skill_3"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skill_4"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skill_5"
                android:textSize="15sp"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/skillsContainer"
            android:layout_marginTop="32dp"
            android:text="@string/back_to_dashboard"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>